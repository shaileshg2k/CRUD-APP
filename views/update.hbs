{{>header}}
<title>CRUD | Home</title>
{{>navbar}}
<div class="container">
    <h5 class="background text-light text-center p-1 mt-1">Update Employee Record</h5>
    <form action="/update/{{data._id}}" method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="name" class="form-control" name="name" placeholder="Enter Name : " value="{{data.name}}">
        </div>
        <div class="row mb-3">
            <div class="col-md-6 col-12">
                <label class="form-label">Salary</label>
                <input type="number" class="form-control" name="salary" placeholder="Enter Salary : " value="{{data.salary}}">
            </div>
            <div class="col-md-6 col-12">
                <label class="form-label">Designation</label>
                <input type="text" class="form-control" name="dsg" placeholder="Enter Designation : " value="{{data.dsg}}">
            </div>
        </div>
                <div class="row mb-3">
            <div class="col-md-6 col-12">
                <label class="form-label">City</label>
                <input type="text" class="form-control" name="city" placeholder="Enter City Name : " value="{{data.city}}">
            </div>
            <div class="col-md-6 col-12">
                <label class="form-label">State</label>
                <input type="text" class="form-control" name="state" placeholder="Enter State Name : " value="{{data.state}}">
            </div>
        </div>
        <button type="submit" class="background text-light w-100 mybtn">Submit</button>
    </form>
</div>
{{>footer}}